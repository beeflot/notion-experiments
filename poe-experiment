<html>
<head>
<title>网页版poe</title>
<style>
body {
font-family: Arial, sans-serif;
background-color: #222;
color: white;
}
h1 {
text-align: center;
}
table {
margin: 0 auto;
border-collapse: collapse;
}
th, td {
border: 1px solid white;
padding: 10px;
}
</style>
</head>
<body>
<h1>网页版poe</h1>
<script>
// 使用poe api获取数据
async function getData() {
let response = await fetch("https://www.pathofexile.com/api/public-stash-tabs");
let data = await response.json();
return data.stashes;
}

// 将数据显示在表格中
async function showData() {
let stashes = await getData();
let table = document.getElementById("stash-table");
for (let stash of stashes) {
let row = document.createElement("tr");
let name = document.createElement("td");
name.textContent = stash.stash;
let type = document.createElement("td");
type.textContent = stash.stashType;
let items = document.createElement("td");
items.textContent = stash.items.length;
row.appendChild(name);
row.appendChild(type);
row.appendChild(items);
table.appendChild(row);
}
}

// 在页面加载时调用showData函数
window.onload = showData;
</script>
<table id="stash-table">
<tr>
<th>Stash Name</th>
<th>Stash Type</th>
<th>Items</th>
</tr>
</table>
</body>
